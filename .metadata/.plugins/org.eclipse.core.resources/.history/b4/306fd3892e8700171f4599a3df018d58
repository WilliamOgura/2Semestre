	xmlns:p="http://primefaces.org/ui">

<ui:composition template="_template.xhtml">
	<ui:define name="conteudo">
		<p:messages errorClass="alert alert-danger"
			infoClass="alert alert-success" />


		<p:panel header="Lista de Alunos" toggleable="true">
			<h:form>
				<h:panelGrid>
					<p:outputLabel for="nome" value="Nome"></p:outputLabel>
					<p:autoComplete value="#{alunoBean.aluno.nome}" id="nome" completeMethod="#{listaAlunoBean.completaNomeAluno}" />
					<p:commandButton action="#{listaAlunoBean.buscar}" value="Buscar"
						update="tabela"></p:commandButton>
				</h:panelGrid>
			</h:form>
		</p:panel>
		<br/>

			<p:dataTable id="tabela" paginatorPosition="bottom" rows="5" paginator="true"
				emptyMessage="Não foram encontrados Alunos" rowsPerPageTemplate="5,10,15" sortOrder="acending"
				value="#{listaAlunoBean.alunos}" var="a" styleClass="table">
				<p:column headerText="RM">					
					#{a.rm}
			</p:column>
				<p:column headerText="Nome">				
					#{a.nome}
			</p:column>
				<p:column headerText="E-mail">			
					#{a.email}
			</p:column>
				<p:column headerText="Data de Nascimento">
					<p:outputLabel value="#{a.dataNascimento.time}">
						<f:convertDateTime pattern="dd/MM/yyyy" />
					</p:outputLabel>

				</p:column>
				<p:column headerText="CPF">						
					#{a.cpf}
			</p:column>
				<p:column headerText="Rating">
					<p:rating value="#{a.rating}" readonly="true" stars="10"/>
				</p:column>

		<p:column headerText="Editar">
			<p:commandButton action="aluno" icon="ui-icon-pencil">
				<f:setPropertyActionListener value="#{a}" target="#{alunoBean.aluno}" />
			</p:commandButton>
			
			<p:commandButton icon="ui-icon-trash" onclick="PF('confirmation').show()">
				<f:setPropertyActionListener value="#{a.rm}" target="#{listaAlunoBean.rm}"/>
			</p:commandButton>
			
		</p:column>
		
			</p:dataTable>
			
		<p:confirmDialog message="Deseja excluir o aluno? " header ="Confirme" severity="alert" widgetVar="confirmation">
			<p:commandButton value="Sim" oncomplete="PF('confirmation').hide()" action="#{listaAlunoBean.excluir()}"/> 		
			<p:commandButton value="Não" onclick="PF('confirmation').hide()" type="button"></p:commandButton>
		</p:confirmDialog>



	</ui:define>
</ui:composition>
